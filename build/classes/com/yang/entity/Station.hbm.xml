<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.yang.entity">

	<class name="Station" table="tb_station">
		<id name="stationId" column="station_id">
            <generator class="native"/>
		</id>
		<property name="stationName" column="station_name"/>
		
		<!-- routes属性， 本类与Route构成多对多关系 -->		
		<set name="routes" table="tb_route_station">
			<key column="station_id"/>
			<many-to-many class="Route" column="route_id"/>
		</set>
		
		<!-- position属性，本类与Position构成一对一关系 -->
		<many-to-one name="position" class="Position" column="position_id"/>
		
		<!-- routeSations属性，本类与RouteStation构成一对多关系 -->
		<set name="routeStations" table="tb_route_station" order-by="id" inverse="true">
			<key column="station_id"/>
			<one-to-many class="RouteStation"/>
		</set>
	</class>
	
</hibernate-mapping>
